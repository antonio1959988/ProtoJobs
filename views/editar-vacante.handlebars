<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" class="default-form" method="POST">
        <h3>Información General</h3>

        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: Programador Junior" value="{{vacante.titulo}}" d>
        </div>

        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Ej: BusinessTech" value="{{vacante.empresa}}" d>
        </div>

        <div class="campo">
            <label>Ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej: México Remoto" value="{{vacante.ubicacion}}" d>
        </div>

        <div class="campo">
            <label>Salario (USD)</label>
            <input type="text" name="salario" placeholder="Ej: 500USD" value="{{vacante.salario}}" d>
        </div>

        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>-- Selecciona --</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>

        <h3>Descripción del Puesto</h3>
        <div class="campo descripcion">
            <label>Descripción</label>
            <input type="hidden" id="x" name="descripcion" value="{{{vacante.descripcion}}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>