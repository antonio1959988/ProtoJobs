<main class="contenedor">
    <form action="/editar-perfil" class="default-form" method="post">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Tu Nombre" value="{{usuario.nombre}}" required>
        </div>

        <div class="campo">
            <label>E-mail</label>
            <input type="email" value="{{usuario.email}}" name="email" placeholder="Tu E-Mail" required>
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu Password">
        </div>

        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>