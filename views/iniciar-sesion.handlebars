<main class="contenedor">
    <form action="/iniciar-sesion" class="default-form" method="post">
        <div class="campo">
            <label>E-Mail</label>
            <input type="text" name="email" placeholder="Tu Email">
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu Password">
        </div>

        <div class="campo acciones">
            <a href="/crear-cuenta">Crea una Cuenta</a>
            <a href="/reestablecer-password">Olvidé mi password</a>
        </div>

        <div class="campo">
            <input type="submit" value="Iniciar Sesión" class="btn btn-azul">
        </div>
    </form>
</main>